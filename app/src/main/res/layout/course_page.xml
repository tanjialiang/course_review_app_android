<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18641 Java for Smart Phone Development"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/instructor_bob"
            android:id="@+id/bob"
            android:clickable="true" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bob Singh"
                android:textSize="30dp"
                android:id="@+id/InstructorName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor"
                android:textSize="30dp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This course gives you every thing you need to build up one of the best android app in the world!"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="105dp"
           android:orientation="vertical"
           android:weightSum="1"
           android:layout_marginTop="3dp">

           <LinearLayout
               android:layout_width="390dp"
               android:layout_height="30dp"
               android:orientation="horizontal"
               android:layout_marginRight="20dp"
               android:layout_gravity="right">

               <TextView
                   android:layout_width="200dp"
                   android:layout_height="25dp"
                   android:text="Average Rating:"
                   android:textSize="17dp"
                   android:layout_marginTop="3dp"
                   android:textStyle="italic" />

               <RatingBar
                   android:layout_width="wrap_content"
                   android:layout_height="25dp"
                   android:id="@+id/ratingBarAvgRating"
                   android:rating="5"
                   android:numStars="5"
                   style="?android:attr/ratingBarStyleSmall"
                   android:layout_marginTop="7dp"
                   android:layout_marginLeft="4dp" />
               <TextView
                   android:layout_width="35dp"
                   android:layout_height="25dp"
                   android:text="5.0"
                   android:textSize="17dp"
                   android:textStyle="italic"
                   android:layout_marginTop="2dp"
                   android:gravity="right"
                   android:layout_marginLeft="10dp" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="390dp"
               android:layout_height="30dp"
               android:orientation="horizontal"
               android:layout_marginRight="20dp"
               android:layout_gravity="right">

               <TextView
                   android:layout_width="200dp"
                   android:layout_height="25dp"
                   android:text="Average GPA:"
                   android:textSize="17dp"
                   android:layout_marginTop="3dp"
                   android:textStyle="italic"
                   android:id="@+id/tvGPA" />

               <RatingBar
                   android:layout_width="wrap_content"
                   android:layout_height="25dp"
                   android:id="@+id/ratingBarAvgScore"
                   android:rating="4"
                   android:numStars="5"
                   style="?android:attr/ratingBarStyleSmall"
                   android:layout_marginTop="7dp"
                   android:layout_marginLeft="4dp" />
               <TextView
                   android:layout_width="35dp"
                   android:layout_height="25dp"
                   android:text="4.0"
                   android:textSize="17dp"
                   android:textStyle="italic"
                   android:id="@+id/tvAG"
                   android:gravity="right"
                   android:layout_marginTop="2dp"
                   android:layout_marginLeft="10dp" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="390dp"
               android:layout_height="30dp"
               android:orientation="horizontal"
               android:layout_marginRight="20dp"
               android:layout_gravity="right">

               <TextView
                   android:layout_width="200dp"
                   android:layout_height="25dp"
                   android:text="Average Workload(hrs/w):"
                   android:textSize="17dp"
                   android:layout_marginTop="3dp"
                   android:textStyle="italic"
                   android:id="@+id/tvAW" />

               <RatingBar
                   android:layout_width="wrap_content"
                   android:layout_height="25dp"
                   android:id="@+id/ratingBarWL"
                   android:rating="4.5"
                   android:numStars="5"
                   style="?android:attr/ratingBarStyleSmall"
                   android:layout_marginTop="7dp"
                   android:layout_marginLeft="4dp" />
               <TextView
                   android:layout_width="35dp"
                   android:layout_height="25dp"
                   android:text="4.5"
                   android:textSize="17dp"
                   android:textStyle="italic"
                   android:id="@+id/tvWL"
                   android:gravity="right"
                   android:layout_marginTop="2dp"
                   android:layout_marginLeft="10dp" />

           </LinearLayout>


       </LinearLayout>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textSize="25dp"
            android:layout_marginLeft="10dp" />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="10dp">


            </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/userImg"
                android:layout_marginLeft="25dp"
                android:src="@drawable/user1"
                android:clickable="true" />



            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User 1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:rating="3.5"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" />

                    <ImageButton
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/like"
                        android:src="@drawable/likesign"
                        android:layout_marginTop="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="989"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp" />

                </LinearLayout>








                <TextView
                    android:layout_width="400dp"
                    android:layout_height="70dp"
                    android:text="Ay, caramba! This course is so amazing,  you all gotta take this!!"
                    android:id="@+id/userRv"
                    android:layout_marginBottom="20dp" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button" android:layout_gravity="center"
        android:visibility="invisible"/>


</LinearLayout>