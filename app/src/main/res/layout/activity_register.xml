<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    ><!--android:background="@color/light_blue"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Registration"
        android:id="@+id/admin_management"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        />
    <!--user name-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:id="@+id/username_text"
            android:padding="10dp"
            android:textSize="20sp"/>
        <EditText android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/username_input"
            android:hint="Enter your username"
            android:inputType="text"
            android:padding="10dp"
            >
        </EditText>
    </LinearLayout>
    
    <!-- password-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:id="@+id/password_text"
            android:padding="10dp"
            android:textSize="20sp"/>
        <EditText android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/password_input"
            android:hint="Enter your password"
            android:inputType="numberPassword"
            android:padding="10dp"
            >
        </EditText>
    </LinearLayout>
    
    <!--confirm password-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password: "
            android:id="@+id/confirmPassword_text"
            android:padding="10dp"
            android:textSize="20sp"/>
        <EditText android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/confirmPassword_input"
            android:hint="Re-enter your password"
            android:inputType="numberPassword"
            android:padding="10dp"
            >
        </EditText>

    </LinearLayout>


    <!--andrew id-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Andrew ID: "
            android:id="@+id/andrewid_text"
            android:padding="10dp"
            android:textSize="20sp"/>
        <EditText android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/andrewid_input"
            android:hint="Enter your andrew id"
            android:inputType="text"
            android:padding="10dp"
            >
        </EditText>

    </LinearLayout>
    <!--email-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Your Email: "
            android:id="@+id/email_text"
            android:padding="10dp"
            android:textSize="20sp"/>
        <EditText android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/email_input"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            >
        </EditText>

    </LinearLayout>

    <!--School-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Select your school: "
            android:id="@+id/selectSchool_text"
            android:padding="10dp"
            android:textSize="20sp"/>
        <Spinner
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/school_spinner" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_gravity="center"
        android:id="@+id/register" />

</LinearLayout>